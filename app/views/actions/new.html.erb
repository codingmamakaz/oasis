<% if @plant.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@plant.errors.count, "error") %>
      prohibited this action from being saved:
    </h2>
 
    <ul>
    <% @plant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h4>Add more action to <b><%= @plant.name %></b></h4>

<%= form_for @plant do |f| %>
<%= f.fields_for :actions, @plant.plants_actions.build.build_action do |a| %>
      <%= a.label :action_name %> <%= a.text_field :action_name %><br>
      
      <%= a.fields_for :plants_actions, @plant.plants_actions.build do |apa| %>
      <%= apa.label "select a date"  %> <%= apa.date_field :action_date %>
      <% end  %>
      <br>
    <% end  %>
    
  <br><br>
  <%= f.submit "Add"%>

  <% end %>